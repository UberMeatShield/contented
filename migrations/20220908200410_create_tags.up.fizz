create_table("tags") {
	t.Column("id", "uuid", {primary: true})
	t.Column("name", "string", {unique: true})
	t.Timestamps()
}

create_table("contents_tags") {
    t.Column("content_id", "uuid", {})
    t.ForeignKey("content_id", {"contents": ["id"]}, {})
    t.Column("tag_id", "uuid", {})
    t.ForeignKey("tag_id", {"tags": ["id"]}, {})
}
